<% doc_presenter = index_presenter(document) %>
<%# default partial to display solr document fields in catalog index view -%>

<div class="document-metadata index-metadata-container">

  <% index_fields(document).each do |field_name, field| -%>
    <% if should_render_index_field? document, field %>
	    <span class="field-label blacklight-<%= field_name.parameterize %>"><%= render_index_field_label document, field: field_name %></span>
	    <div class="field-value blacklight-<%= field_name.parameterize %>"><%= doc_presenter.field_value field %></div>
    <% end -%>
  <% end -%>

</div>
